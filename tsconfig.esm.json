{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2021", "DOM"],
		"declaration": false,
		"outDir": "./dist/esm",
		"rootDir": "./",
		"removeComments": true,
		"noEmit": false,
		"importHelpers": false,
		"downlevelIteration": true,
		"strict": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["classes/**/*", "functions/**/*", "index.ts"],
	"exclude": ["node_modules", "dist", "test.ts", "**/*.test.ts", "**/*.spec.ts"]
}
